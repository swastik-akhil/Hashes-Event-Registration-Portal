<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>User Profile Card</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
  <style>
    .card {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
      margin-top: 20%;
    }
    .user-image {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 20px;
      padding: 10px;
    }
    .user-name {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .user-email {
      font-size: 18px;
      margin-bottom: 10px;
      color: #999;
    }
    .logout-button {
      width: 100%;
      background-color: lightgreen;
      color: #fff;
      text-align: center;
      padding: 10px;
      border-radius: 5px;
      text-decoration: none;
    }
    .form2 {
  margin-top: 5%; /* Adjust the percentage as needed */
  margin-left: 30%;
  margin-right: 30%;
  margin-bottom: 5%;
}

    body{
      background-color: #1b1b11;
      color: yellowgreen;
    }
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  </style>
</head>
<body>
  <section class="main-content">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
          <div class="card">
            <img class="user-image" src="<%= user.profile_photo_url %>" alt="User Image" />
            <h3 class="user-name"><%= user.name %></h3>
            <p class="user-email"><%= user.email %></p>
            
            
            <a href="/logout" class="logout-button">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <% if (user.paymentStatus) { %>
      <div class="container">
        <div class="row">
          <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <div class="card">
              <h3 class="user-name">Payment Status</h3>
              <p class="user-email">Completed</p>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="container">
        <div class="row">
          <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <div class="card">
              <h3 class="user-name">Payment Status</h3>
              <p class="user-email">Pending</p>
            </div>
          </div>
        </div>
      </div>
      <form class="form2" action="/user/addDetails" method="post">
        <!-- Branch -->
        <div class="form-group">
          <label for="branch">Branch</label>
          <select class="form-control" id="branch" name="branch" required>
            <option value="" disabled selected>Select Branch</option>
            <option value="CSE">CSE</option>
            <option value="CSE(AIML)">CSE(AIML)</option>
            <option value="CSE(DS)">CSE(DS)</option>
            <option value="CSIT">CSIT</option>
            <option value="IT">IT</option>
            <option value="ECE">ECE</option>
            <option value="ME">ME</option>
            <option value="CE">CE</option>
            <option value="EN">EN</option>
          </select>
        </div>

        <!-- Year -->
        <div class="form-group">
          <label for="year">Year</label>
          <select class="form-control" id="year" name="year" required>
            <option value="" disabled selected>Select Year</option>
            <option value="First">First</option>
            <option value="Second">Second</option>
            <option value="Third">Third</option>
            <option value="Fourth">Fourth</option>
          </select>
        </div>

        <!-- Student Number -->
        <div class="form-group">
          <label for="studentNumber">Student Number</label>
          <input type="number" class="form-control" id="studentNumber" name="studentNumber" required />
        </div>

        <!-- Roll Number -->
        <div class="form-group">
          <label for="rollNumber">Roll Number</label>
          <input type="number" class="form-control" id="rollNumber" name="rollNumber" />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    <% } %>
  </section>
</body>
</html>
